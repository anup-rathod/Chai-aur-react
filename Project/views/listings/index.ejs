<% layout ("/layouts/boilerplate") %>
<body>
    <h3>All listings</h3>
    <!-- <form method="get" action="/listings/new" >
        <button>Create New Listings</button>
    </form> -->
    <div class="row row-cols-lg-3 row-col-md-2 row-cols-sm-1">
        <% for(let listing of allListings){ %>
        <a href="/listings/<%= listing._id  %>" class="listing-link">
            <div class="card col" width="18rem">
                <img src="<%= listing.image %>" class="card-img-top" alt="listing_image" >
                <div class="card-img-overlay">
                    abcd
                  </div>
                <div class="card-body">
                  <p class="card-text"><%= listing.title %> <br>
                   &#8377; <%= listing.price.toLocaleString("en-IN") %>
                  </p>
                </div>
            </div>
        </a>
        <% } %>
    </div>
</body>
